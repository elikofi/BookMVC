@model BookStore.Models.Book
@{
}

<div class="container pt-10">
    <div>
        <h2>Update Book</h2>
        <div class="row">
            <div class="col-10">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <div class="form-group">
                        <label asp-for="Name">Book Name:</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category">Category:</label>
                        <input type="text" class="form-control" asp-for="Category" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Book Price:</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" style="height: 70px; width: 100%"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    @if (TempData["msg"] != null)
                    {
                        <div class="form-group">
                            @TempData["msg"]
                        </div>
                    }
                    <div class="form-group pt-3">
                        <button type="submit" class="btn btn-outline-success">Save</button>
                        <a href="/Book/GetAll" class="btn btn-outline-info">Book list</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


